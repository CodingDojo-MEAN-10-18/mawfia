<!DOCTYPE html>
<html lang="en">
   <head>
      <title>Secret Details</title>
      <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
      <script src="/socket.io/socket.io.js"></script>
      <link rel="stylesheet" type="text/css" href="/css/secret.css">
   </head>
   <body>
          <h1>Comment on this secret <%= user.first_name %></h1>
          <div id="nav"><a href="/profile">Profile</a><a href="/logout">Logout</a><a href="/secrets">Secrets</a></div>
          <table>
              <thead><tr><th><%= secret.text %></th></tr></thead>
              <% if(secret.comments && secret.comments.length > 0) { %>
                  <tbody>
                      <% for(comment of secret.comments) { %>
                          <tr><td><%= comment.text %></td></tr>
                      <% } %>
                  </tbody>
              <% } %>
              <tfoot>
                  <tr>
                      <td>
                          <form action="/comment/new/<%= secret._id %>" method="POST">
                              <textarea name="text" placeholder="Leave your comment here!"></textarea>
                              <input type="submit" value="Submit">
                          </form>
                      </td>
                  </tr>
              </tfoot>
          </table>
          <% if(messages.errors) { %><% for (let error of messages.errors) { %><h3 class="error"><%= error %></h3><% } %><% } %>
   </body>
</html>